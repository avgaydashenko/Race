<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc" tools:context=".GameMenu">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="318dp"
        android:fitsSystemWindows="true"
        android:background="#944cff">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <Button
            android:layout_width="230dp"
            android:layout_height="69dp"
            android:text="OnePlayerOption"
            android:id="@+id/buttonOnePlayerOption"
            android:layout_gravity="center_horizontal|top"
            android:onClick="onClickButtonOnePlayerOption" />

        <Button
            android:layout_width="218dp"
            android:layout_height="74dp"
            android:text="TwoPlayersOption"
            android:id="@+id/buttonTwoPlayersOption"
            android:layout_gravity="center"
            android:onClick="onClickButtonTwoPlayrsOption" />

        <Button
            android:layout_width="166dp"
            android:layout_height="75dp"
            android:text="GameAbout"
            android:id="@+id/buttonGameAbout"
            android:layout_gravity="right|bottom"
            android:onClick="onClickButtonGameAbout" />

        <Button
            android:layout_width="155dp"
            android:layout_height="64dp"
            android:text="GameInfo"
            android:id="@+id/buttonGameInfo"
            android:layout_gravity="left|bottom"
            android:onClick="onClickButtonGameInfo" />

    </FrameLayout>

</FrameLayout>
